<property>
<code>document.observe("dom:loaded", function() {
  $$('input').each(function(item) {
    if (item.id.endsWith('Color')) {
      item.addClassName('procolor');
    }
  });
  $$('.color').each(function(item) {
    var bgColor = item.getStyle('background-color');
    var dbgColor = ProColor.prototype.decodeHexColor(item.innerHTML);
    var fgColor = ProColor.prototype.computeTextColor(ProColor.prototype.decodeHexColor(item.innerHTML));
    item.setStyle({'color': 'rgb(' + fgColor.r + ', ' + fgColor.g + ', ' + fgColor.b + ')'});
  });
});</code>

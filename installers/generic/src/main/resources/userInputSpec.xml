<userInput>

   <!-- Standard/Advanced configuration panel -->
   <panel order="0">
      <field type="title" align="right"
         txt="Standard/Advanced Options" bold="true" size="2"
         id="installConfigName"
         icon="/images/search.png"
         />
      <field type="radio" variable="installConfig">
         <description align="left" txt="Select Standard or Advanced configurations"
            id="installConfig.text"/>
         <spec>
           <choice txt="Standard" id="installConfig.radio.standard" value="standard" set="true"/>
           <choice txt="Advanced" id="installConfig.radio.advanced" value="advanced" />
         </spec>
      </field>
      <field type="divider" align="center"/>
      <field type="staticText" align="left" id="installConfig.note"
         txt="Note: Selecting the Advancedd configuration allows you to change the server port"/>
   </panel>

   <!-- Port configuration panel -->
   <panel order="1">
      <createForField name="installConfig" value="advanced"/>
      <field type="title" align="right"
         txt="Port configuration" bold="true" size="2"
         id="portConfig"
         icon="/images/search.png"
         />
      <field type="text" variable="SERVER_CONFIG">
         <description align="left" txt="The jboss server/xxx configuration name, e.g., default, all"
            id="serverConfigName.text"/>
         <spec txt="Name:" id="text.namelabel" size="32" set="default"/>
      </field>
   </panel>

   <!-- DataSource Configuration Panel. Default or Configure-->
   <panel order="2">
      <createForPack name="jboss-ds" />
      <createForPack name="portal" />
      <createForField name="installConfig" value="advanced"/>
      <field type="title" align="right"
         txt=" DataSource Configuration" bold="true" size="2"
         id="dsConfig"
         icon="/images/search.png"
         />
      <field type="radio" variable="dsConfig">
         <description align="left" txt="Configure DataSource or use Default"
            id="dsConfig.option"/>
         <spec>
           <choice txt="Default" id="dsConfig.radio.default" value="default"  set="true"/>
           <choice txt="Configure" id="dsConfig.radio.configure" value="config" />
         </spec>
      </field>
      <field type="space"/>
      <field type="staticText" align="left" id="datasource.instruct"
         txt="By default HSQLDB database is used. If you select Default above, the Database selection below is ignored" />
      <field type="space"/>
      <field type="combo" variable="database">
         <description align="left" txt="Select Databse"
            id="database.text"/>
         <spec>
           <choice txt="DB2-400" id="combo.db2-400" value="db2-400"/>
           <choice txt="DB2" id="combo.db2-ds" value="db2"/>
           <choice txt="Derby" id="combo.derby" value="derby"/>
           <choice txt="HSQLDB" id="combo.hsqldb" value="hsqldb" set="true"/>
           <choice txt="HSQLDB Encrypted" id="combo.hsqldb-encrypted" value="hsqldb-encrypted" />
           <choice txt="Informix" id="combo.informix" value="informix" />
           <choice txt="Jdatastore" id="combo.jdatastore" value="jdatastore" />
           <choice txt="Jsql" id="combo.jsql" value="jsql" />
           <choice txt="Mimer" id="combo.mimer" value="mimer" />
           <choice txt="Msaccess" id="combo.msaccess" value="msaccess" />
           <choice txt="Mssql" id="combo.mssql" value="mssql" />
           <choice txt="Mysql" id="combo.mysql" value="mysql" />
           <choice txt="Oracle" id="combo.oracle" value="oracle" />
           <choice txt="Pointbase" id="combo.pointbase" value="pointbase" />
           <choice txt="Postgress" id="combo.postgress" value="postgress" />
           <choice txt="Progress" id="combo.progress" value="progress" />
           <choice txt="Sapdb" id="combo.sapdb" value="sapdb" />
           <choice txt="Solid" id="combo.solid" value="solid" />
           <choice txt="Sybase" id="combo.sybase" value="sybase" />
           <choice txt="Other" id="combo.other" value="other" />
         </spec>
      </field>
      <field type="divider" align="bottom"/>
      <field type="staticText" align="left" id="datasource.note"
         txt="Note: You need to copy the driver libraries to jboss-4.x\server\default\lib. HSQLDB drivers hsqldb-plugin.jar and hsqldb.jar are included by default." />
      <field type="space"/>
      <field type="staticText" align="left" id="datasource.note2"
         txt="You may want to edit jboss-4.x\server\default\deploy\jboss-ds.xml depending on DataBase you choose. Pre-configured *-ds.xml file are available in jboss-4.x\docs\examples\jca. You also need to copy the driver libraries to jboss-4.x\server\default\lib. HSQLDB drivers hsqldb-plugin.jar and hsqldb.jar are included by default." />

      <!-- <field type="text" variable="dsJndiName">
         <spec txt="JNDI Name:" id="text.label" size="10" set="DefaultDS"/>
      </field>  -->
   </panel>



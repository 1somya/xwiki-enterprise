<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">
  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.xwiki.platform</groupId>
    <artifactId>xwiki</artifactId>
    <version>38-SNAPSHOT</version>
  </parent>
  <groupId>org.xwiki.enterprise</groupId>
  <artifactId>xwiki-enterprise-parent</artifactId>
  <packaging>pom</packaging>
  <name>XWiki Products - Enterprise - Parent POM</name>
  <version>2.7-SNAPSHOT</version>
  <description>XWiki Products - Enterprise - Parent POM</description>
  <scm>
    <connection>scm:svn:http://svn.xwiki.org/svnroot/xwiki/enterprise/trunk</connection>
    <developerConnection>scm:svn:https://svn.xwiki.org/svnroot/xwiki/enterprise/trunk</developerConnection>
    <url>http://svn.xwiki.org/svnroot/xwiki/enterprise/trunk</url>
  </scm>
  <issueManagement>
    <system>jira</system>
    <url>http://jira.xwiki.org/jira/browse/XE</url>
  </issueManagement>
  <modules>
    <module>wiki</module>
    <module>database</module>
    <module>web</module>
    <module>distribution</module>
  </modules>
  <properties>
    <!-- Versions of XWiki dependencies used in XE modules -->
    <platform.tool.configuration.version>1.46-SNAPSHOT</platform.tool.configuration.version>
    <platform.tool.jetty.version>1.19-SNAPSHOT</platform.tool.jetty.version>
    <platform.tool.packager.version>1.16-SNAPSHOT</platform.tool.packager.version>
    <platform.tool.rootwebapp.version>1.5-SNAPSHOT</platform.tool.rootwebapp.version>
    <platform.tool.standards-validator.version>1.4-SNAPSHOT</platform.tool.standards-validator.version>
    <platform.tool.xar-handler.version>1.10-SNAPSHOT</platform.tool.xar-handler.version>
    <platform.tool.xar-plugin.version>1.14-SNAPSHOT</platform.tool.xar-plugin.version>

    <platform.core.version>${project.version}</platform.core.version>
    <platform.web.version>${project.version}</platform.web.version>

    <platform.administration.version>1.44-SNAPSHOT</platform.administration.version>
    <platform.annotations.version>1.10-SNAPSHOT</platform.annotations.version>
    <platform.activitystream.version>1.10-SNAPSHOT</platform.activitystream.version>
    <platform.blog.version>1.25-SNAPSHOT</platform.blog.version>
    <platform.extension.version>1.2-SNAPSHOT</platform.extension.version>
    <platform.invitation.version>1.5-SNAPSHOT</platform.invitation.version>
    <platform.jodatime.version>1.4-SNAPSHOT</platform.jodatime.version>
    <platform.plugin.lucene.version>1.22-SNAPSHOT</platform.plugin.lucene.version>
    <platform.plugin.mailsender.version>1.17-SNAPSHOT</platform.plugin.mailsender.version>
    <platform.officeimporter.version>1.18-SNAPSHOT</platform.officeimporter.version>
    <platform.panels.version>1.43-SNAPSHOT</platform.panels.version>
    <platform.scheduler.version>1.24-SNAPSHOT</platform.scheduler.version>
    <platform.search.version>1.5-SNAPSHOT</platform.search.version>
    <platform.plugin.skinx.version>1.20-SNAPSHOT</platform.plugin.skinx.version>
    <platform.statistics.version>1.10-SNAPSHOT</platform.statistics.version>
    <platform.tag.version>1.18-SNAPSHOT</platform.tag.version>
    <platform.watchlist.version>1.31-SNAPSHOT</platform.watchlist.version>
    <platform.webdav.version>1.4-SNAPSHOT</platform.webdav.version>
    <platform.wikimacrobridge.version>1.5-SNAPSHOT</platform.wikimacrobridge.version>

    <!-- Don't run CLIRR on XE modules since there's no Java code and for some reason CLIRR executes which makes
         the build take longer than needed (since it downloads the previous versions). -->
    <xwiki.clirr.skip>true</xwiki.clirr.skip>
  </properties>
  <build>
    <pluginManagement>
      <plugins>
        <plugin>
          <groupId>org.apache.maven.plugins</groupId>
          <artifactId>maven-assembly-plugin</artifactId>
          <configuration>
            <appendAssemblyId>false</appendAssemblyId>
          </configuration>
        </plugin>
      </plugins>
    </pluginManagement>
  </build>
  <profiles>
    <profile>
      <id>ci</id>
      <activation>
        <!-- This property is automatically defined by the Maven release plugin when executing
             a release. Thus this profile will be automatically enabled when releasing -->
        <property>
          <name>performRelease</name>
        </property>
      </activation>
      <modules>
        <module>installers</module>
        <module>distribution-test</module>
      </modules>
    </profile>
    <profile>
      <id>jetty</id>
      <activation>
        <activeByDefault>true</activeByDefault>
      </activation>
      <properties>
        <xe.container>jetty</xe.container>
      </properties>
    </profile>
    <profile>
      <id>glassfish</id>
      <properties>
        <xe.container>glassfish</xe.container>
      </properties>
    </profile>
  </profiles>
</project>

<assembly>
  <formats>
    <format>zip</format>
  </formats>
  <includeBaseDirectory>true</includeBaseDirectory>
  <dependencySets>
    <dependencySet>
      <!-- This shouldn't be required but there's a bug in version 2.2-beta-1 of the Assembly
        plugin where the artifact name will be used instead of / if outputFileNameMapping is
        not specified -->
      <outputFileNameMapping></outputFileNameMapping>
      <includes>
        <include>org.glassfish.distributions:web</include>
      </includes>
      <outputDirectory>/</outputDirectory>
      <unpack>true</unpack>
      <fileMode>755</fileMode>
    </dependencySet>
    <dependencySet>
      <!-- This shouldn't be required but there's a bug in version 2.2-beta-1 of the Assembly
        plugin where the artifact name will be used instead of / if outputFileNameMapping is
        not specified -->
      <outputFileNameMapping></outputFileNameMapping>
      <includes>
        <include>com.xpn.xwiki.products:xwiki-enterprise-database-derby</include>
      </includes>
      <outputDirectory>${glassfish.database.folder}</outputDirectory>
      <unpack>true</unpack>
    </dependencySet>
  </dependencySets>
  <files>
    <file>
      <source>${basedir}/target/xwiki-enterprise-${pom.version}.war</source>
      <outputDirectory>${glassfish.war.folder}</outputDirectory>
    </file>
  </files>
  <fileSets>
    <!-- Add License/Notice files -->
    <fileSet>
      <directory>${basedir}/target/maven-shared-archive-resources/META-INF</directory>
      <outputDirectory>META-INF</outputDirectory>
    </fileSet>
  </fileSets>
</assembly>
